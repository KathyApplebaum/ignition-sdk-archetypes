<archetype-descriptor name="${artifactId}">
    <modules>
        <module id="${rootArtifactId}-build" dir="__rootArtifactId__-build" name="${rootArtifactId}-build" package="">
            <!-- No files to copy for build module -->
        </module>

        <module id="${rootArtifactId}-driver" dir="__rootArtifactId__-driver" name="${rootArtifactId}-driver">
            <fileSets>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/main/resources</directory>
                </fileSet>
            </fileSets>
        </module>
    </modules>
</archetype-descriptor>
